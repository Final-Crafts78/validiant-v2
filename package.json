{
  "name": "validiant-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Validiant - Full-stack project management platform",
  "packageManager": "pnpm@10.29.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "api:dev": "npm run dev --workspace=@validiant/api",
    "api:build": "npm run build --workspace=@validiant/api",
    "api:start": "npm run start --workspace=@validiant/api",
    "api:deploy": "npm run deploy --workspace=@validiant/api",
    "api:db:generate": "npm run db:generate --workspace=@validiant/api",
    "api:db:push": "npm run db:push --workspace=@validiant/api",
    "api:db:migrate": "npm run db:migrate --workspace=@validiant/api",
    "api:db:studio": "npm run db:studio --workspace=@validiant/api",
    "web:dev": "npm run dev --workspace=@validiant/web",
    "web:build": "npm run build --workspace=@validiant/web",
    "web:start": "npm run start --workspace=@validiant/web",
    "mobile:start": "npm run start --workspace=@validiant/mobile",
    "mobile:android": "npm run android --workspace=@validiant/mobile",
    "mobile:ios": "npm run ios --workspace=@validiant/mobile",
    "shared:build": "npm run build --workspace=@validiant/shared",
    "shared:dev": "npm run dev --workspace=@validiant/shared"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "monorepo",
    "project-management",
    "react-native",
    "nextjs",
    "hono",
    "drizzle",
    "cloudflare-workers",
    "edge",
    "typescript"
  ],
  "author": "Validiant Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Final-Crafts78/validiant-v2.git"
  }
}