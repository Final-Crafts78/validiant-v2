# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Environment: development, production, test
NODE_ENV=development

# Server port
PORT=3000

# API base URL (used in emails, responses, etc.)
API_URL=http://localhost:3000

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/validiant_dev

# Enable SSL for database connection (set to true in production)
DATABASE_SSL=false

# Database pool configuration
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================

# Redis connection string
# Format: redis://[:password@]host:port/db
REDIS_URL=redis://localhost:6379

# Redis key prefix (useful for multiple environments sharing same Redis instance)
REDIS_PREFIX=validiant:

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================

# JWT secret for access tokens (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-long-random-string

# JWT secret for refresh tokens (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -base64 64
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-use-different-string

# Access token expiration time
# Examples: 15m, 1h, 2h, 1d
JWT_EXPIRES_IN=15m

# Refresh token expiration time
# Examples: 7d, 30d, 90d
JWT_REFRESH_EXPIRES_IN=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Allowed origins (comma-separated)
# Examples:
#   - Development: http://localhost:3001,http://localhost:5173
#   - Production: https://app.validiant.com,https://www.validiant.com
CORS_ORIGIN=http://localhost:3001,http://localhost:5173,http://localhost:8081

# ============================================================================
# RATE LIMITING
# ============================================================================

# Time window in milliseconds (default: 15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================

# Log level: error, warn, info, http, debug
LOG_LEVEL=info

# Log to file (set to true to enable file logging)
LOG_TO_FILE=false

# Log file directory (only used if LOG_TO_FILE is true)
LOG_DIR=./logs

# ============================================================================
# EMAIL CONFIGURATION (Optional - for future email features)
# ============================================================================

# Email service provider: smtp, sendgrid, mailgun, ses
# EMAIL_PROVIDER=smtp

# SMTP configuration (if using SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-email-password

# SendGrid API key (if using SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Email from address
# EMAIL_FROM=noreply@validiant.com
# EMAIL_FROM_NAME=Validiant

# ============================================================================
# FILE STORAGE (Optional - for future file upload features)
# ============================================================================

# Storage provider: local, s3, gcs
# STORAGE_PROVIDER=local

# Local storage configuration
# STORAGE_LOCAL_PATH=./uploads

# AWS S3 configuration (if using S3)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=validiant-uploads

# ============================================================================
# FRONTEND URLS (for emails, redirects, etc.)
# ============================================================================

# Web app URL
WEB_APP_URL=http://localhost:3001

# Mobile app deep link scheme
MOBILE_APP_SCHEME=validiant://

# ============================================================================
# SECURITY
# ============================================================================

# Password reset token expiration (in minutes)
PASSWORD_RESET_EXPIRY=60

# Email verification token expiration (in hours)
EMAIL_VERIFICATION_EXPIRY=24

# Session timeout (in days)
SESSION_TIMEOUT=30

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable/disable features
# FEATURE_TIME_TRACKING=true
# FEATURE_FILE_UPLOADS=false
# FEATURE_NOTIFICATIONS=false
# FEATURE_WEBHOOKS=false

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Enable debug mode (verbose logging)
DEBUG=false

# Enable API documentation
API_DOCS_ENABLED=true

# Seed database with test data (development only)
# SEED_DATABASE=false
