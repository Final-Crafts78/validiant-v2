# =============================================================================
# VALIDIANT API - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Core Configuration
# -----------------------------------------------------------------------------
NODE_ENV=development
PORT=3001
API_VERSION=v1

# -----------------------------------------------------------------------------
# Database (Neon Serverless PostgreSQL - Edge Compatible)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@ep-xxxxx.us-east-2.aws.neon.tech/dbname?sslmode=require"
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# Redis (Upstash - Edge Compatible via HTTP)
# -----------------------------------------------------------------------------
# Get these from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL="https://your-redis-xxxxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_rest_token_here"

# -----------------------------------------------------------------------------
# JWT Authentication
# -----------------------------------------------------------------------------
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-min-32-characters-long-CHANGE-THIS"
JWT_REFRESH_SECRET="your-refresh-secret-min-32-characters-long-CHANGE-THIS"
JWT_ACCESS_EXPIRY="1h"
JWT_REFRESH_EXPIRY="7d"

# -----------------------------------------------------------------------------
# Session Management
# -----------------------------------------------------------------------------
SESSION_SECRET="your-session-secret-min-32-characters-long-CHANGE-THIS"
SESSION_MAX_AGE=86400000

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
BCRYPT_ROUNDS=12
CORS_ORIGIN="http://localhost:3000,http://localhost:19006"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Client URLs
# -----------------------------------------------------------------------------
WEB_APP_URL="http://localhost:3000"
MOBILE_APP_SCHEME="validiant"

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_SWAGGER=true
ENABLE_2FA=true
ENABLE_WEBHOOKS=true

# -----------------------------------------------------------------------------
# OAuth Providers (Phase 6.1 - Optional)
# -----------------------------------------------------------------------------
# Google OAuth 2.0
# Setup: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add authorized redirect URI: http://localhost:3001/api/v1/oauth/google/callback
# 3. Copy Client ID and Client Secret below
# GOOGLE_CLIENT_ID="123456789-abcdefghijklmnop.apps.googleusercontent.com"
# GOOGLE_CLIENT_SECRET="GOCSPX-xxxxxxxxxxxxxxxxxxxxx"
# GOOGLE_REDIRECT_URI="http://localhost:3001/api/v1/oauth/google/callback"

# GitHub OAuth
# Setup: https://github.com/settings/developers
# 1. Create New OAuth App
# 2. Set Authorization callback URL: http://localhost:3001/api/v1/oauth/github/callback
# 3. Copy Client ID and generate Client Secret
# GITHUB_CLIENT_ID="Iv1.xxxxxxxxxxxxxxxx"
# GITHUB_CLIENT_SECRET="ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
# GITHUB_REDIRECT_URI="http://localhost:3001/api/v1/oauth/github/callback"

# Microsoft OAuth (Future Implementation)
# MICROSOFT_CLIENT_ID=""
# MICROSOFT_CLIENT_SECRET=""
# MICROSOFT_CALLBACK_URL=""

# -----------------------------------------------------------------------------
# Optional: Email Service (SendGrid)
# -----------------------------------------------------------------------------
# SENDGRID_API_KEY=""
# SENDGRID_FROM_EMAIL="noreply@validiant.com"
# SENDGRID_FROM_NAME="Validiant"

# -----------------------------------------------------------------------------
# Optional: SMS Service (Twilio)
# -----------------------------------------------------------------------------
# TWILIO_ACCOUNT_SID=""
# TWILIO_AUTH_TOKEN=""
# TWILIO_PHONE_NUMBER=""

# -----------------------------------------------------------------------------
# Optional: File Storage
# -----------------------------------------------------------------------------
# STORAGE_PROVIDER="supabase"
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET=""
# SUPABASE_STORAGE_URL=""
