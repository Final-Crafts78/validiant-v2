# -----------------------------------------------------------------------------
# Optional: Push Notifications (Firebase)
# -----------------------------------------------------------------------------
# FIREBASE_PROJECT_ID=""
# FIREBASE_PRIVATE_KEY=""
# FIREBASE_CLIENT_EMAIL=""

# -----------------------------------------------------------------------------
# Optional: Payment Processing (Stripe)
# -----------------------------------------------------------------------------
# STRIPE_SECRET_KEY=""
# STRIPE_WEBHOOK_SECRET=""
# STRIPE_PUBLISHABLE_KEY=""

# -----------------------------------------------------------------------------
# Optional: Monitoring
# -----------------------------------------------------------------------------
# SENTRY_DSN=""

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL="info"
LOG_FORMAT="json"
