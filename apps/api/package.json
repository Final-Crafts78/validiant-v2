{
  "name": "@validiant/api",
  "version": "1.0.0",
  "description": "Backend API for Validiant project management platform",
  "main": "dist/worker.js",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc",
    "start": "wrangler dev",
    "deploy": "wrangler deploy --dry-run",
    "deploy:prod": "wrangler deploy",
    "party:dev": "partykit dev",
    "party:deploy": "partykit deploy",
    "dev:all": "concurrently \"npm run dev\" \"npm run party:dev\"",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "drizzle-kit migrate",
    "wrangler": "wrangler"
  },
  "keywords": [
    "api",
    "backend",
    "hono",
    "drizzle",
    "postgresql",
    "cloudflare-workers",
    "edge",
    "oauth",
    "webauthn",
    "passkeys",
    "websockets",
    "partykit",
    "realtime"
  ],
  "author": "Validiant Team",
  "license": "MIT",
  "dependencies": {
    "@hono/zod-validator": "^0.2.1",
    "@neondatabase/serverless": "^0.9.0",
    "@simplewebauthn/server": "^9.0.3",
    "@upstash/redis": "^1.28.2",
    "@validiant/shared": "workspace:*",
    "arctic": "^1.9.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.29.3",
    "hono": "^4.0.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240208.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.20.13",
    "partykit": "^0.0.111",
    "typescript": "^5.3.3",
    "wrangler": "^3.28.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
